<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yxsj.yz.e10.MainActivity">

    <TextView
        android:id="@+id/sample_text"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:text="Hello World!"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
        <!--app:layout_constraintBottom_toBottomOf="parent"-->
        <!--app:layout_constraintLeft_toLeftOf="parent"-->
        <!--app:layout_constraintRight_toRightOf="parent"-->
        <!--app:layout_constraintTop_toTopOf="parent"-->
        <!--app:layout_constraintHorizontal_bias="0.604"-->
        <!--app:layout_constraintVertical_bias="0.56"-->
        />


    <Button
        android:id="@+id/GiveFaceButton"
        android:layout_width="70dp"
        android:layout_height="41dp"
        android:text="灰度图"
        android:layout_below="@+id/sample_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="23dp" />
        <!--app:layout_constraintRight_toRightOf="parent"-->
        <!--app:layout_constraintLeft_toLeftOf="parent"-->
        <!--app:layout_constraintBottom_toBottomOf="parent"-->
        <!--app:layout_constraintTop_toTopOf="parent"-->
        <!--app:layout_constraintVertical_bias="0.063"-->
        <!--app:layout_constraintHorizontal_bias="0.979" -->
        />

    <Button
        android:id="@+id/GetFaceButton"
        android:layout_width="70dp"
        android:layout_height="41dp"
        android:text="原图"
        android:layout_marginTop="66dp"
        android:layout_below="@+id/GiveFaceButton"
        android:layout_alignRight="@+id/GiveFaceButton"
        android:layout_alignEnd="@+id/GiveFaceButton"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp" />
        <!--app:layout_constraintRight_toRightOf="parent"-->
        <!--app:layout_constraintLeft_toLeftOf="parent"-->
        <!--app:layout_constraintHorizontal_bias="0.979"-->
        <!--app:layout_constraintBottom_toBottomOf="parent"-->
        <!--app:layout_constraintTop_toTopOf="parent"-->
        <!--app:layout_constraintVertical_bias="0.536" -->
        />

    <ImageView
        android:id="@+id/IV01"
        android:adjustViewBounds="true"
        android:maxHeight="640dp"
        android:maxWidth="640dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="fitStart"
        android:layout_alignTop="@+id/GiveFaceButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/IV02"
        android:adjustViewBounds="true"
        android:maxHeight="640dp"
        android:maxWidth="640dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="fitStart"
        android:layout_below="@+id/IV01"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
